<div id="pictures_main_div"> <!--PAGE DIV -->

<% if flash[:success] %>
    <div class="alert alert-success">
        <%= flash[:success] %>
        
    </div>
<% end %>

<h1>Pictures#index</h1>
<p>Find me in app/views/pictures/index.html.erb</p>
<%= link_to("Add a Snap" , new_picture_path) %>
<br>
<br>


<div class="row" style ="">
    
            
            
                    <% @pictures.each do |p| %>
                    <div class="col-md-6 col-sm" style ="border: 0px red solid">
                        <div class="thumbnail" style ="background-color: rgba(255,255,255,0.65)"><!-- BEGIN THUMBNAIL -->
                            <%= link_to picture_path(p) do %>
                            <img id="" src="<%= p.picture_url %>" style="width:100%" class="img-thumbnail">
                            <% end %>    
                        <div class="caption">
                            <p><%= link_to(p.caption, picture_path(p)) %></p>
                            <p><i style="color:grey">Comments:</i></p>
                            
                                <% p.comments.last(2).each do |x| %>
                                    <p><%= x.body %></p>
                                <% end %>
                            

                        </div><!--END caption -->
                        </div> <!-- END THUMBNAIL -->
                    </div>  <!--END COLUMN -->
                        <% end %>
            
    
  </div> <!--END ROW -->


<br>
<br>
<%= link_to("Add a Snap" , new_picture_path) %>
<br>
<br>
</div> <!--PAGE DIV -->