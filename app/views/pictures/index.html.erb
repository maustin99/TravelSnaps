        <div id="gallery" >
                <div id="thumbnail_outer" >
                            <% @pictures.each do |p| %>
                            <div id="thumbnail_inner" >
                                    <div id="thumbnail_box" style ="background-color: rgba(255,255,255,0.65)"><!-- BEGIN THUMBNAIL -->
                                        <%= link_to picture_path(p) do %>
                                        <img id="" src="<%= p.picture_url %>" style="width:100%" class="img-thumbnail">
                                        <% end %>    
                                        <div id="index_caption">
                                            <p><%= link_to(p.caption, picture_path(p)) %></p>
                                            <p><i style="color:grey">Comments:</i></p>
                                            
                                                <% p.comments.last(2).each do |x| %>
                                                    <p><%= x.body %></p>
                                                <% end %>
                                            

                                         </div><!--END caption -->
                                    </div> <!-- END THUMBNAIL INNER -->
                            </div>  <!--END thumbnail  -->
                            <% end %> <!-- end pictures EACH -->
                    
                </div> <!-- end thumbnail_outer -->
       
        </div> <!--END gallery -->

 

</div> <!--END  DIV -->

            
        
        <p class="snapLink"><%= link_to("Add a Snap" , new_picture_path) %></p>
        
