<h1>Update User Profile</h1>
<img id="" src="<%= @user.profile_pic %>" width="125" style="text-align: center; margin-left:700px;" >
<%= form_for @user, :html => {class: 'new_user form-horizontal'} do |f| %>
    <div class="row"><legend class="col-md-4 col-md-offset-4"><%= @user.name %>'s Profile:</legend></div>
    <fieldset>
        <div class="form-group">
            <%= f.label :name, 'Name*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :name, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :email, 'Email*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :email, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :password, 'Password*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.password_field :password, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :password_confirmation, 'Confirm Password*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
        </div>
        
        <div class="form-group">
            <%= f.label :avatar, 'Link to Headshot Image*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :profile_pic, class: 'form-control' %>
        </div>

        <BR><BR><BR>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
                <%= f.submit 'Update Profile', class: 'btn btn-success' %>
            </div>
        </div>
    </fieldset>
<% end %>
<BR>
 <%= link_to("Return" , user_path(@user)) %>